extends base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="name") 닉네임
        input(placeholder="닉네임", name="name", type="text", id="name" value=loggedInUser.name, required)
        br
        br
        label(for="avatar") 이메일
        input(placeholder="이메일", name="email", type="email", id="avatar" value=loggedInUser.email,required)
        br
        br
        label(for="avatar") 대표 이미지
        input(type="file", id="avatar", name="avatar" accept="image/*")
        br
        br
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            div.edit-profile__password
                a(href="change-password") Change Password &rarr;