extends base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="아이디를 입력해 주세요.", name="username", type="text", required)
        input(placeholder="패스워드를 입력해 주세요.", name="password", type="password", required)
        input(type="submit", value="로그인")
        include partials/social-login
    div.auth-switch
        span 아직 계정이 없으신가요?&nbsp;&nbsp;
        a(href="/join") 가입하기 &rarr;